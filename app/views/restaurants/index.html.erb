<div class='container' id='listcontainer'>
  <style type="text/css"> 
  #listcontainer{
    overflow: scroll;
    margin: 0px;
    padding: 0px;
    width: 100%
  }

  .rtable{
    height: 100%
  }


    </style>
<table class='table rtable'>
  <thead>
    <tr>
      <th> ID </th>
      <th>Name</th>
      <th>Cuisine</th>
      <th>Featured</th>
      <th>Address</th>
      <th>Neigborhood</th>
      <th>Website</th>
      <th>Phone</th>
      <th>Description</th>
      <th>Price</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.id %> </td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.cuisine %></td>
        <td><%= restaurant.featured%></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.neigborhood %></td>
        <td><%= restaurant.website %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.price_range %></td>
        <td><%= restaurant.general_tags%></td>
        <% if current_user.try(:admin?) %>
        <td><%= link_to 'Show', restaurant, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-primary" %></td>
        <td><%= link_to 'Delete', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.try(:admin?) %>
<%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-success" %>
<%end%>
</div>
