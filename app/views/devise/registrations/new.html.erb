<div class="panel panel-default devise-panel devise-register">
  <div class="panel-heading">
    <h3 class="panel-title">Sign up</h3>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class='formgroup'><%= f.label :first_Name %><br />
  <%= f.text_field :firstname, autofocus: true, class: 'form-control devise-field' %></div>

  <div class='formgroup'><%= f.label :last_Name %><br />
  <%= f.text_field :lastname, autofocus: true, class: 'form-control devise-field' %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: 'form-control devise-field' %></div>

  <div><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control devise-field' %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control devise-field' %></div>

  <div><%= f.submit "Sign up", class: 'btn btn-default devise-field devise-button'%>
<% end %>
  </div>
  <div class="panel-footer"><%= render "devise/shared/links" %></div>
</div>


<style type="text/css">
//registration styling
.panel{
  text-align:center;
}


.devise-panel, .pane{
  width:30%;
  margin:0 auto;
  margin-top:5%;
  border-radius: 0
}

.devise-field{
  margin-bottom: 15px;
  border-radius: 0
}
.devise-button{
margin-top:15px
}
.devise-edit{
  margin-top: 0px;
}

.devise-register{
  width: 60%;
  margin-top:auto;

}
</style>






